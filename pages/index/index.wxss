.select{
  position: absolute;
  z-index: 10;
  border: 2rpx solid #aaaaaa;
  padding: 0 8rpx;
  top:46rpx;
  left: 0rpx;
  width: 100%;
  overflow: auto;
  height: 0;
  max-height: 200rpx;
  background-color:rgb(54, 4, 4);
  box-sizing: border-box;
  transition: height 0.5s;/* 高度变换过渡 */
  font-size: 13px;
}

.select .type{
  color: #aaaaaa;
  border-top: 2px solid #b11111;
  padding: 6rpx;
}
.select :first-child{
  border: 0;
}

